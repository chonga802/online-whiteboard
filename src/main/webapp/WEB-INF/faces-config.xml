<?xml version="1.0"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>

    <managed-bean eager="true">
        <managed-bean-name>whiteboardsManager</managed-bean-name>
        <managed-bean-class>com.googlecode.whiteboard.controller.WhiteboardsManager</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>whiteboardUuidData</managed-bean-name>
        <managed-bean-class>com.googlecode.whiteboard.controller.WhiteboardUuidData</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>createWhiteboard</managed-bean-name>
        <managed-bean-class>com.googlecode.whiteboard.controller.CreateWhiteboard</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>whiteboardsManager</property-name>
            <value>#{whiteboardsManager}</value>
        </managed-property>
        <managed-property>
            <property-name>whiteboardUuidData</property-name>
            <value>#{whiteboardUuidData}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>displayWhiteboard</managed-bean-name>
        <managed-bean-class>com.googlecode.whiteboard.controller.DisplayWhiteboard</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
        <managed-property>
            <property-name>whiteboardsManager</property-name>
            <value>#{whiteboardsManager}</value>
        </managed-property>
        <managed-property>
            <property-name>whiteboardUuidData</property-name>
            <value>#{whiteboardUuidData}</value>
        </managed-property>
    </managed-bean>

</faces-config>